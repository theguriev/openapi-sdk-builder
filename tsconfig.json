{
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "lib": ["DOM"],
    "baseUrl": "./src",
    "rootDir": "./src",
    "target": "es6",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
